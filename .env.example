# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database
DATABASE_URL_EXTERNAL=postgresql://username:password@hostname:port/database

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=us-east-2

# Frontend Configuration
FRONTEND_URL=https://your-frontend-url.vercel.app
CORS_ALLOWED_ORIGINS=https://your-frontend-url.vercel.app,http://localhost:5173,http://localhost:5176

# Kommo CRM Configuration
KOMMO_ENABLED=true
KOMMO_ACCESS_TOKEN=your_kommo_access_token

# WhatsApp Configuration
WHATSAPP_ENABLED=true
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
# Múltiplos números separados por vírgula (sem espaços nos números)
WHATSAPP_RECIPIENT_NUMBERS=5511999999999,5511888888888,5511777777777,5511666666666

# Google Drive Configuration
GOOGLE_DRIVE_ENABLED=true

# App Configuration
PORT=8080
NODE_ENV=production
